{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noImplicitAny": false,
    "lib": ["es6", "es2015"],
    "types": ["node"],
    "removeComments": true,
    "declaration": true,
    "outDir": "./lib",
    "rootDir": "./src",
    "strict": true
  },
  "exclude": ["lib", "./node_modules"],
  "include": ["src"]
}
